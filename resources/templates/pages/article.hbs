{{> layouts/base title=(join "| " post.fields.title) }}
{{#*inline "header-block"}}
  <meta property="og:url" content="https://vea.re/blog/{{post.fields.slug}}" />
  <meta property="og:type" content="article" />
  <meta property="og:title" content="{{post.fields.title}}" />
  <meta property="og:description" content="{{post.fields.preview}}" />
  <meta property="fb:app_id" content="242882006242455" />
  {{#if post.fields.banner}}
    <meta property="og:image" content="{{post.fields.banner.fields.url}}" />
  {{else}}
    <meta property="og:image" content="https://vea.re/media/veare_facebook_share_image.png" />
  {{/if}}
{{/inline}}
{{#*inline "body"}}
  <article class="Article Grid" itemprop="mainEntityOfPage" itemid="/blog/{{post.fields.slug}}" itemscope itemtype="http://schema.org/BlogPosting">
    <link itemprop="mainEntityOfPage" href="/blog/{{post.fields.slug}}" />
    {{#if post.fields.banner}}
      <div class="Article__banner">
        <img src="{{post.fields.banner.fields.url}}" alt="{{post.fields.banner.fields.title}}" />
      </div>
    {{/if}}
    <div class="Article__publication-details">
        <time class="Article__time" itemprop="datePublished" datetime="{{fields.rawdate}}">{{post.fields.date}}</time> •&nbsp;
        <time class="Article__read-time" datetime="{{fields.readingTime}}m">{{post.fields.readingTime}} min read</time>
    </div>
    <h1 class="Article__title" itemprop="headline">{{post.fields.title}}</h1>

    <div class="Article__author">
      — Published by <span itemprop="author" itemscope itemtype="http://schema.org/Person">
        <a class="author" href="https://twitter.com/lukasoppermann" itemprop="url" title="about {{post.fields.author.fields.name}}" rel="author">
          <span itemprop="name">{{post.fields.author.fields.name}}</span>
        </a></span>
         /
        <span itemprop="publisher" itemtype="http://schema.org/Organization" itemscope>
          <a itemprop="url" href="http://vea.re">
            <span itemprop="name">vea.re</span>
          </a>
        </span> —
    </div>
    {{!-- Load Chapter --}}
    {{#each post.fields.chapters}}
      {{> "includes/chapter" chapter=fields}}
    {{/each}}
  </article>
  <script type="text/javascript" src="/{{staticFiles.[js/blog.js]}}"></script>
{{/inline}}
