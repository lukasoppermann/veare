{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2016", "dom"],
    "module": "CommonJS",
    "isolatedModules": false,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "strictNullChecks": true,
    "rootDir": "./"
  },
  "typeRoots": [
    "./types",
    "./node_modules/@types"
  ]
}
