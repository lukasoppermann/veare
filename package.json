  "devDependencies": {
    "@nuclei-components/lazy-picture": "^0.3.3",
    "@nuclei-components/page-sections": "^0.6.2",
    "@webcomponents/webcomponentsjs": "^2.2.4",
    "acorn": "^6.0.5",
    "check-links": "^1.1.4",
