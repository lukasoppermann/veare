<li class="o-list-item o-article-preview o-article-preview--{{fields.category.fields.slug}}" itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting">
    <div class="o-article-preview__meta">
        <meta itemprop="author" content="{{fields.author.name}}" />
        <meta itemprop="publisher" content="vea.re" />
        <time itemprop="datePublished" class="o-article-preview__date" datetime="{{fields.date}}">{{fields.date}}</time>
        {{#if fields.category.fields.title}}
          <a href="" class="o-article-preview__category o-article-preview__category--{{fields.category.fields.slug}}">{{fields.category.fields.title}}</a>
        {{/if}}
        <time class="o-article-preview__read-time" datetime="{{fields.readingTime}}m">{{fields.readingTime}} min read</time>
    </div>
    <a itemprop="url" class="o-article-preview__link" title="Read: {{fields.title}}" href="/blog/{{fields.slug}}">
    <link itemprop="mainEntityOfPage" href="{{fields.slug}}" />
        <h3 class="o-article-preview__title" itemprop="name headline">{{fields.title}}</h3>
        <p class="o-article-preview__excerpt" itemprop="description">{{fields.preview}}</p>
    </a>
</li>
