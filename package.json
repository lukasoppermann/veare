{
  "name": "veare",
  "description": "veare website",
  "version": "1.0.0",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukasoppermann/veare.git"
  },
  "author": "Lukas Oppermann",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lukasoppermann/veare/issues"
  },
  "homepage": "https://github.com/lukasoppermann/veare#readme",
  "devDependencies": {
    "@nuclei-components/grid": "^1.1.0",
    "@nuclei-components/lazy-picture": "^0.1.0",
    "@nuclei-components/page-sections": "^0.6.2",
    "@nuclei-components/responsive-image": "^0.3.3",
    "@types/contentful-resolve-response": "^0.1.30",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.10",
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "acorn": "^6.0.4",
    "eslint": "^5.9.0",
    "eslint-plugin-typescript": "^0.14.0",
    "fetch-inject": "^2.0.2",
    "glob": "^7.1.3",
    "node-sass": "^4.10.0",
    "onchange": "^5.1.3",
    "pre-commit": "^1.2.2",
    "rollup": "^0.67.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "supervisor": "^0.12.0",
    "tslib": "^1.9.3",
    "ttab": "^0.6.1",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^21.0.1"
  },
  "dependencies": {
    "@types/helmet": "0.0.42",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "contentful": "^7.0.5",
    "deasync": "^0.1.14",
    "dns-sync": "^0.1.3",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-basic-auth": "^1.1.6",
    "express-handlebars": "^3.0.0",
    "flat-cache": "^1.3.4",
    "forever": "^0.15.3",
    "helmet": "^3.15.0",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.0.2",
    "markdown-it-attrs": "^2.3.2",
    "markdown-it-expand-tabs": "^1.0.13",
    "markdown-it-implicit-figures": "^0.9.0",
    "markdown-it-modify-token": "^1.0.2",
    "memory-cache": "^0.2.0",
    "merge-options": "^1.0.1",
    "prismjs": "^1.15.0",
    "reading-time": "^1.1.3",
    "striptags": "^3.1.1",
    "svgo": "^1.1.1",
    "uuid": "^3.3.2"
  },
  "config": {
    "moveFilesJs": "node_modules/@webcomponents/webcomponentsjs/bundles/webcomponents-sd-ce.js node_modules/@webcomponents/webcomponentsjs/bundles/webcomponents-sd-ce.js.map node_modules/fetch-inject/dist/fetch-inject.min.js"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  },
  "scripts": {
    "start": "node_modules/.bin/ttab -t 'Node Server' 'npm run supervisor' && node_modules/.bin/ttab -t 'Building assets' 'npm run build'",
    "supervisor": "supervisor -w app,resources/templates --extensions node,js,hbs app.js",
    "build": "npm run build:js:watch & npm run build:css:watch",
    "build:css:watch": "onchange -i 'resources/css/*.scss' 'resources/css/*/*.scss' -- npm run build:css",
    "build:css": "npm run css:clean && npm run css:compile && npm run css:rev",
    "css:clean": "rm -f public/css/*",
    "css:compile": "node-sass --source-map public/css/app.css.map --output-style compressed -o public/css/ resources/css/app.scss",
    "css:rev": "node-file-rev public/css/app.css --manifest=public/rev-manifest.json --root=public/",
    "build:js:watch": "onchange -i 'resources/js/*.ts' 'resources/ts/*/*.ts' -- npm run build:js",
    "build:js": "npm run js:clean && npm run js:compile && npm run js:rev && npm run js:move",
    "js:clean": "rm -f public/js/*",
    "js:move": "cp $npm_package_config_moveFilesJs public/js/",
    "js:compile": "rollup --config --environment FETCHINJECTVERSION:$(npm list --depth=0 | grep fetch-inject | sed 's/[^0-9.]*\\([0-9.]*\\).*/\\1/')",
    "js:rev": "node-file-rev public/js/*.js --manifest=public/rev-manifest.json --root=public/",
    "test": "npm run test:js",
    "test:js": "standard --parser typescript-eslint-parser --plugin typescript 'app.js' 'resources/js/*.ts' 'app/**/*.js' | snazzy",
    "test:css": "stylelint resources/css",
    "travis": "npm run test",
    "removeCompiled": "branch=$(git branch | grep \\* | cut -d ' ' -f2) && if test \"$branch\" != \"master\" ; then git reset HEAD public/ ; fi"
  },
  "pre-commit": [
    "test",
    "removeCompiled"
  ]
}
